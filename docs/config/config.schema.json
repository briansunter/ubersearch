{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ubersearch configuration",
  "type": "object",
  "required": ["defaultEngineOrder", "engines"],
  "properties": {
    "defaultEngineOrder": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "engines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": [
              "type",
              "id",
              "enabled",
              "displayName",
              "monthlyQuota",
              "creditCostPerSearch",
              "lowCreditThresholdPercent",
              "apiKeyEnv",
              "endpoint",
              "searchDepth"
            ],
            "properties": {
              "type": { "const": "tavily" },
              "id": { "type": "string" },
              "enabled": { "type": "boolean" },
              "displayName": { "type": "string" },
              "monthlyQuota": { "type": "integer", "minimum": 1 },
              "creditCostPerSearch": { "type": "integer", "minimum": 0 },
              "lowCreditThresholdPercent": { "type": "number", "minimum": 0, "maximum": 100 },
              "apiKeyEnv": { "type": "string" },
              "endpoint": { "type": "string", "format": "uri" },
              "searchDepth": { "enum": ["basic", "advanced"] }
            },
            "additionalProperties": true
          },
          {
            "type": "object",
            "required": [
              "type",
              "id",
              "enabled",
              "displayName",
              "monthlyQuota",
              "creditCostPerSearch",
              "lowCreditThresholdPercent",
              "apiKeyEnv",
              "endpoint",
              "defaultLimit"
            ],
            "properties": {
              "type": { "const": "brave" },
              "id": { "type": "string" },
              "enabled": { "type": "boolean" },
              "displayName": { "type": "string" },
              "monthlyQuota": { "type": "integer", "minimum": 1 },
              "creditCostPerSearch": { "type": "integer", "minimum": 0 },
              "lowCreditThresholdPercent": { "type": "number", "minimum": 0, "maximum": 100 },
              "apiKeyEnv": { "type": "string" },
              "endpoint": { "type": "string", "format": "uri" },
              "defaultLimit": { "type": "integer", "minimum": 1 }
            },
            "additionalProperties": true
          },
          {
            "type": "object",
            "required": [
              "type",
              "id",
              "enabled",
              "displayName",
              "monthlyQuota",
              "creditCostPerSearch",
              "lowCreditThresholdPercent",
              "apiKeyEnv",
              "endpoint"
            ],
            "properties": {
              "type": { "const": "linkup" },
              "id": { "type": "string" },
              "enabled": { "type": "boolean" },
              "displayName": { "type": "string" },
              "monthlyQuota": { "type": "integer", "minimum": 1 },
              "creditCostPerSearch": { "type": "integer", "minimum": 0 },
              "lowCreditThresholdPercent": { "type": "number", "minimum": 0, "maximum": 100 },
              "apiKeyEnv": { "type": "string" },
              "endpoint": { "type": "string", "format": "uri" },
              "autoStart": { "type": "boolean" },
              "autoStop": { "type": "boolean" },
              "composeFile": { "type": "string" },
              "containerName": { "type": "string" },
              "healthEndpoint": { "type": "string", "format": "uri" },
              "initTimeoutMs": { "type": "integer", "minimum": 1 }
            },
            "additionalProperties": true
          },
          {
            "type": "object",
            "required": [
              "type",
              "id",
              "enabled",
              "displayName",
              "monthlyQuota",
              "creditCostPerSearch",
              "lowCreditThresholdPercent",
              "apiKeyEnv",
              "endpoint",
              "defaultLimit"
            ],
            "properties": {
              "type": { "const": "searchxng" },
              "id": { "type": "string" },
              "enabled": { "type": "boolean" },
              "displayName": { "type": "string" },
              "monthlyQuota": { "type": "integer", "minimum": 1 },
              "creditCostPerSearch": { "type": "integer", "minimum": 0 },
              "lowCreditThresholdPercent": { "type": "number", "minimum": 0, "maximum": 100 },
              "apiKeyEnv": { "type": "string" },
              "endpoint": { "type": "string", "format": "uri" },
              "defaultLimit": { "type": "integer", "minimum": 1 },
              "autoStart": { "type": "boolean" },
              "autoStop": { "type": "boolean" },
              "composeFile": { "type": "string" },
              "containerName": { "type": "string" },
              "healthEndpoint": { "type": "string", "format": "uri" },
              "initTimeoutMs": { "type": "integer", "minimum": 1 }
            },
            "additionalProperties": true
          }
        ]
      }
    },
    "storage": {
      "type": "object",
      "properties": {
        "creditStatePath": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
